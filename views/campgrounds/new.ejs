<%- include("../layout/header")  %> 

<div class="">
    <div class="container">   
        <h2 class="form-title">Create New Campground</h2>     
                   
            <form action="/campgrounds" method="post" class="form-width">
                <div class="form-group">
                    <label for="">Campground Name :</label>
                    <input class="form-control" type="text" name="campground[name]" placeholder="campground name">
                </div>
                <div class="form-group">
                    <label for="">Image URL :</label>
                    <input class="form-control" type="text" name="campground[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <label for="">Price ($)/Night :</label>
                    <input class="form-control" type="number" name="campground[price]" placeholder="price in Dollars($)" min="0.01" step="0.01">
                </div> 
                <div class="form-group">
                    <label for="">Description :</label>
                    <input class="form-control" type="text" name="campground[description]" placeholder="description">
                </div>            
                <button class="btn btn-primary w-100">Submit</button>
            </form>
            <div class="text-center">
                <a href="/campgrounds">Go Back </a>  
            </div>  
    </div>    
</div>


