<%- include("../layout/header")  %>

<div class="">
    <div class="container">
        <h2 class="form-title">Add Comment to <%= campground.name %> </h2>

        <form action="/campgrounds/<%= campground._id  %>/comments" method="post" class="form-width">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="comment">
            </div>
            <!-- <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>  -->
            <button class="btn btn-primary form-control">Submit</button>
        </form>
        <div class="text-center">
            <a href="/campgrounds/<%= campground._id  %>">Go Back </a>
        </div>       

    </div>
</div>


